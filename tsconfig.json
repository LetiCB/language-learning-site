{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["DOM", "DOM.Iterable", "ES2016"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "types": ["jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
